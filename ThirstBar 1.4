# Konfiguracja
options:
# Na jakich swiatach skrypt bedzie dzialal ?
	world: "2033"
	world2: "Survival"
# Co ile sekund bedzie schodzilo pragnienie ?
	cd: 30
# Koniec konfigu
on load:
	set {nccore.working.thirst} to true
on unload:
	set {nccore.working.thirst} to false
on join:
	if {nccore.thirst.%player%} is not set:
		set {nccore.thirst.%player%} to 100
every {@cd} seconds:
	loop all players in {@world} or {@world2}:
		if gamemode of loop-player is not creative:
			if {nccore.thirst.%loop-player%} > 100:
				if {nccore.thirst.%loop-player%} > 149:
					add -2 to {nccore.thirst.%loop-player%}
					loop 10 times:
						add 100 to {nccore.blood.%loop-player%}
						wait 1 second
				else:
					add -2 to {nccore.thirst.%loop-player%}
					loop 3 times:
						add 100 to {nccore.blood.%loop-player%}
						wait 1 second
			if {nccore.thirst.%loop-player%} < 5:
				send "&3Wody..." to loop-player
			if {nccore.thirst.%loop-player%} > 1:
				add -1 to {nccore.thirst.%loop-player%}
			else:
				kill loop-player
				set {nccore.thirst.%loop-player%} to 100
on drink:
	if player is in {@world} or {@world2}:
		if player's tool is water bottle named "&7Czysta woda":
			add 10 to {nccore.thirst.%player%}
		else if player's tool is water bottle:
			add 5 to {nccore.thirst.%player%}
on eat:
	if player is in {@world} or {@world2}:
		if player's tool is apple or melon:
			add 2 to {nccore.thirst.%player%}
		if player's tool is soup:
			add 3 to {nccore.thirst.%player%}
		if player's tool is carrot or potato:
			add 1 to {nccore.thirst.%player%}
		if player's tool is golden apple or enchanted golden apple:
			add 10 to {nccore.thirst.%player%}			
					
